{
    "name": "page-name-displayer-extension",
    "version": "1.0.0",
    "description": "Firefox extension using React and TypeScript to display the page name.",
    "scripts": {
        "build": "cross-env REACT_APP_DEPLOY_ENV=production webpack --mode production",
        "build:prod": "cross-env REACT_APP_DEPLOY_ENV=production webpack --mode production",
        "build:dev": "cross-env REACT_APP_DEPLOY_ENV=dev webpack --mode development",
        "build:test": "cross-env REACT_APP_DEPLOY_ENV=test webpack --mode development",
        "start": "webpack --mode development --watch"
    },
    "dependencies": {
        "lucide-react": "^0.477.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "webextension-polyfill": "^0.12.0"
    },
    "devDependencies": {
        "@types/react": "^18.0.27",
        "@types/react-dom": "^18.0.10",
        "@types/webextension-polyfill": "^0.12.3",
        "autoprefixer": "^10.4.20",
        "cross-env": "^7.0.3",
        "css-loader": "^7.1.2",
        "postcss": "^8.4.49",
        "style-loader": "^4.0.0",
        "tailwindcss": "^3.4.17",
        "ts-loader": "^9.4.2",
        "typescript": "^4.9.5",
        "webpack": "^5.75.0"
    }
}
